<!DOCTYPE html>
<html lang="en">
<head>
<title>Bootstrap Case</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet"
	href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<link rel='stylesheet' href='/stylesheets/style.css' />
<script
	src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
<script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
<script src="angularjs/NgHome.js"></script>
<script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
<script src="angularjs/ui-bootstrap-tpls-0.13.4.js"></script>
<script
	src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<body>
	<div ng-app="home" ng-controller="homeController"
		ng-init="funcInit('<%= data.email%>','<%-data.first_name%>')">


		<!- HEADER DIV STARTS -->
		<div class="ban" id="ban">
			<br>
			<div class="row">
				<div class="col-md-1"></div>
				<div class="col-md-1">
					<img src="../images/logo.png" class="img-responsive"
						alt="Cinque Terre" width="40" height="20">
				</div>
				<div class="col-md-4" style="color: white;">
					<div class="input-group">
						<input type="text" class="form-control"
							placeholder="Search facebook" ng-change="searchFB()"
							ng-model="searchText"
							typeahead="user.first_name for user in users | filter:$viewValue | limitTo:100"
							typeahead-on-select="getProfile($item, $model, $label)">
						<span class="input-group-btn">
							<button type="button" class="btn btn-default"
								ng-click="getProfile()">
								<span class="glyphicon glyphicon-search"></span>
							</button>
						</span>
					</div>
					<!-- /input-group -->
				</div>
				<div class="col-md-2"></div>
				<div class="col-md-1">
					<div class="dropdown">
						<button class="btn btn-primary dropdown-toggle" type="button"
							id="menu1" data-toggle="dropdown">
							<span class="glyphicon glyphicon-user"></span><span class="badge">{{pending.length}}</span>
						</button>
						<ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
						<div ng-if="pending !== undefined">
							<li ng-repeat="pend in pending"><b><a role="menuitem"
								tabindex="-1" href="#" ng-click="acceptReq(pend.friendId,pend.name)">{{pend.name}}<span class="label label-primary">Accept</span></li></a></b>
							</div>
						</ul>
					</div>
				</div>
				<div class="col-md-2"><a href="/signOut" class="btn btn-primary" ><b>SignOut</b></a></div>
			</div>
		</div>
		<!- HEADER DIV ENDS -->
		<br>
		<div class="row">
			<!-- first col start -->
			<div class="col-md-1"></div>
			<div class="col-md-2">
				
				<div class="panel-body">
				<div class="list-group">
					<a href="/profile" class="list-group-item"><span
						class="glyphicon glyphicon-user "></span> <%-data.first_name %> <%-data.last_name %></a> <a
						href="/enterInfo" class="list-group-item"><span
						class="glyphicon glyphicon-pencil"></span> Edit Profile</a> <a
						href="#" class="list-group-item"><span
						class="glyphicon glyphicon-globe"></span> Newsfeeds</a> <a href="/Group"
						class="list-group-item"><span class="glyphicon glyphicon-th"></span>
						Groups</a> <a href="#" class="list-group-item"><span
						class="glyphicon glyphicon-envelope"></span> Messages</a> <a href="#"
						class="list-group-item"><span
						class="glyphicon glyphicon-calendar"></span> Events</a> <a href="#"
						class="list-group-item"><span
						class="glyphicon glyphicon-heart-empty"></span> Friends</a> <a
						href="#" class="list-group-item"><span
						class="glyphicon glyphicon-thumbs-up"></span> Likes</a>
				</div>
			</div>
				
				
				

			</div>
			<!-- first col end -->
			<!-- second col start -->
			<div class="col-md-5">
				<div class="well">
					<form role="form">
						<div class="form-group">
							<label for="comment">Update Status:</label>
							<textarea class="form-control" ng-model="post" rows="2"
								id="comment"></textarea>
						</div>
						
						<button type="button" ng-click="savePost()"
							class="btn btn-primary pull-right">Post</button>
							<ul class="list-inline">
						<li><a href=""></a></li>
						<li><a href=""><i class="glyphicon glyphicon-camera"></i></a></li>
						<li><a href=""><i class="glyphicon glyphicon-map-marker"></i></a></li>
					</ul>
					</form>
				</div>
				<div ng-repeat="x in list.slice(0,entries.length)|orderBy :'-time'">
					<div class="list-group">
						<a href="#" class="list-group-item ">
							<h4 class="list-group-item-heading"><img src="/images/wallpaper.jpg" length="40px" width="40px"/> <i>{{x.user_name}}</i></h4> 
							<p class="list-group-item-text">{{x.post_desc}}</p>
						</a>
					</div>
				</div>
				<br> <br>
			</div>
			<!-- second col end -->
			<div class="col-md-2">
				<div class="row">
					<div class="well">
						<h4>
							Friends<a href="#"> <span class="glyphicon glyphicon-user"></span>
							</a> <br>
							<div ng-repeat="friend in friendList">
								<div class="list-group">
									<a href="#" class="list-group-item ">
										<h6 class="list-group-item-heading">{{friend.name}}</h6>
									</a>
								</div>
							</div>
						</h4>

					</div>
				</div>
			</div>
		</div>
	</div>

</body>
<script>
	
</script>
</html>
