<!DOCTYPE html>
<html lang="en">
<head>
<title>Bootstrap Case</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet"
	href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<link rel='stylesheet' href='/stylesheets/style.css' />
<script
	src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
<script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
<script src="angularjs/NgGroupPage.js"></script>
<script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
<script src="angularjs/ui-bootstrap-tpls-0.13.4.js"></script>
<script
	src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<body>
	<div ng-app="groupPage" ng-controller="groupPageController"
		ng-init="funcInit(<%- data[0].user_id%>,'<%- data[0].first_name%>',<%- groupId%>)">


		<!- HEADER DIV STARTS -->
		<div class="ban" id="ban">
			<br>
			<div class="row">
				<div class="col-md-1"></div>
				<div class="col-md-1">
					<img src="../images/logo.png" class="img-responsive"
						alt="Cinque Terre" width="40" height="20">
				</div>
				<div class="col-md-4" style="color: white;">
					<div class="input-group">
						<input type="text" class="form-control"
							placeholder="Search facebook" ng-change="searchFB()"
							ng-model="searchText"
							typeahead="user.first_name for user in users | filter:$viewValue | limitTo:100"
							typeahead-on-select="getProfile($item, $model, $label)">
						<span class="input-group-btn">
							<button type="button" class="btn btn-default"
								ng-click="getProfile()">
								<span class="glyphicon glyphicon-search"></span>
							</button>
						</span>
					</div>
					<!-- /input-group -->
				</div>
				<div class="col-md-2"></div>
				<div class="col-md-1">
					<div class="dropdown">
						<button class="btn btn-primary dropdown-toggle" type="button"
							id="menu1" data-toggle="dropdown">
							<span class="glyphicon glyphicon-user"></span><span class="badge">{{pending.length}}</span>
						</button>
						<ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
							<li ng-repeat="pend in pending"><a role="menuitem"
								tabindex="-1" href="#" ng-click="acceptReq(pend.user_id)">{{pend.first_name}}</a></li>
						</ul>
					</div>
				</div>
				<div class="col-md-2"><a href="/signOut" class="btn btn-primary" ><b>SignOut</b></a></div>
			</div>
		</div>
		<!- HEADER DIV ENDS -->
		<br> </br> </br>
		<div class="well">
			<h3>{{groupList[0].group_name}}</h3>
			<div class="list-group">
				<a href="#" class="list-group-item" disabled>
					<p class="list-group-item-text">{{groupList[0].group_desc}}</p>
				</a>
			</div>

		</div>
		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-3">
							<div class="well">
				<h3>Members</h3>
				<div ng-repeat="mem in memList">
					<li class="list-group-item" disabled><span
						class="list-group-item-heading">{{mem.first_name}}</span> <span
						ng-if="mem.admin == '0'">
							<button type="button" class="btn btn-info btn-sm"
								ng-click="delMember(mem.user_id,mem.group_id)">Delete</button>
					</span></li>
				</div>
				</div>
			</div>
			<div class="col-md-1"></div>
			<div class="col-md-5">
				<div class="well">
					<form class="form-horizontal" role="form">

						<div class="form-group">
							<label class="control-label col-sm-2" for="name"> Name:</label>
							<div class="col-sm-5">
								<input type="text" ng-model="usrName" class="form-control"
									id="name" placeholder="Enter Member Name">
							</div>
						</div>
						<div class="form-group">
							 <div class="col-sm-offset-4 col-sm-10">
								<button type="button"
									ng-click="addMember()" 
									class="btn btn-success">Add</button>
							</div> 
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

	</div>

</body>
<script>
	
</script>
</html>
